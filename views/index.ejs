<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Node.js Website Constructor</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .constructor-panel {
            min-height: 100vh;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }
        .theme-card {
            cursor: pointer;
            transition: all 0.3s;
            height: 100%;
        }
        .theme-card:hover {
            transform: scale(1.05);
            box-shadow: 0 10px 25px rgba(0,0,0,0.2);
        }
        .site-preview {
            height: 200px;
            background-size: cover;
            background-position: center;
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <div class="constructor-panel d-flex align-items-center py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center mb-5">
                    <h1 class="display-4 fw-bold">Node.js Website Constructor</h1>
                    <p class="lead">Create beautiful websites with our lightweight constructor</p>
                </div>
            </div>
            
            <div class="row">
                <div class="col-lg-12">
                    <div class="card shadow">
                        <div class="card-body p-5">
                            <h3 class="mb-4">Create New Website</h3>
                            <form id="createWebsiteForm">
                                <div class="mb-3">
                                    <label for="siteName" class="form-label">Website Name</label>
                                    <input type="text" class="form-control" id="siteName" required>
                                </div>
                                <div class="mb-3">
                                    <label for="domain" class="form-label">Domain</label>
                                    <input type="text" class="form-control" id="domain" placeholder="e.g., mybusiness.com">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Choose Theme</label>
                                    <div class="row" id="themeSelector">
                                        <div class="col-md-4 mb-3">
                                            <div class="card theme-card" data-theme="business">
                                                <div class="site-preview" style="background-color: #4e73df;"></div>
                                                <div class="card-body text-center">
                                                    <h5 class="card-title">Business</h5>
                                                    <p class="card-text">Professional business website template</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <div class="card theme-card" data-theme="portfolio">
                                                <div class="site-preview" style="background-color: #1cc88a;"></div>
                                                <div class="card-body text-center">
                                                    <h5 class="card-title">Portfolio</h5>
                                                    <p class="card-text">Creative portfolio showcase template</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <div class="card theme-card" data-theme="blog">
                                                <div class="site-preview" style="background-color: #36b9cc;"></div>
                                                <div class="card-body text-center">
                                                    <h5 class="card-title">Blog</h5>
                                                    <p class="card-text">Content-focused blog template</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <input type="hidden" id="selectedTheme" required>
                                </div>
                                <button type="submit" class="btn btn-primary btn-lg">Create Website</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Theme selection
        document.querySelectorAll('.theme-card').forEach(card => {
            card.addEventListener('click', function() {
                document.querySelectorAll('.theme-card').forEach(c => c.classList.remove('border-primary'));
                this.classList.add('border-primary');
                document.getElementById('selectedTheme').value = this.dataset.theme;
            });
        });

        // Form submission
        document.getElementById('createWebsiteForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const siteName = document.getElementById('siteName').value;
            const domain = document.getElementById('domain').value;
            const theme = document.getElementById('selectedTheme').value;
            
            if (!theme) {
                alert('Please select a theme');
                return;
            }
            
            try {
                const response = await fetch('/api/websites', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        name: siteName,
                        domain: domain,
                        theme: theme,
                        content: JSON.stringify({
                            title: siteName,
                            headline: `Welcome to ${siteName}`,
                            description: `The best place for ${siteName} services`,
                            aboutText: `About ${siteName}`,
                            contactText: `Contact us for more information`
                        })
                    })
                });
                
                if (response.ok) {
                    alert('Website created successfully!');
                    this.reset();
                    document.querySelectorAll('.theme-card').forEach(c => c.classList.remove('border-primary'));
                } else {
                    const error = await response.json();
                    alert('Error: ' + error.error);
                }
            } catch (error) {
                alert('Error: ' + error.message);
            }
        });
    </script>
</body>
</html>